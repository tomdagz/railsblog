%h2
  Articles

%table
  %thead
    %tr
      %th Title
      %th Body
      %th
  %tbody
    - @articles.each do |a|
      %tr
        %td= a.title
        %td= a.body
        %td
          = link_to "Edit", edit_article_path(a)
          = link_to "Destroy", article_path(a), method: :delete, data: { confirm: 'Are you sure?' }

= link_to "New article", new_article_path()